root = true

[*]
charset = utf-8
end_of_line = LF
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[Makefile]
indent_size = 2
indent_style = tab

[*.mk]
indent_size = 2
indent_style = tab

[*.md]
max_line_length = 150

[*.json]
indent_size = 2
insert_final_newline = false

[*.{toml,tml,yaml,yml}]
indent_size = 2
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
